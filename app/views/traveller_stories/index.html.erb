<!-- hero banner -->
<section class="hero-common-banner">
	<img src="<%= asset_path 'blogs.jpg'%>" alt="hero images">
	<span class="overlay"></span>
	<h3 data-aos="fade-up" data-aos-duration="1000" data-aos-delay="50">Traveller Stories</h3>
</section>

<section class="blogs-wrapper">
	<div class="container">
		<div class="row">
			<% @traveller_stories.each do |traveller_story| %>
				<div class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-4">
					<div class="common-blogs-card" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="50">
						<a href="/#" class="">
							<%= image_tag (traveller_story.poster.presence || asset_path('blogimg1.jpg')), alt: traveller_story.title %>
						</a>
						<h3><%= traveller_story.title%></h3>
						<a href="/#" class="read-more">Read more...</a>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</section>